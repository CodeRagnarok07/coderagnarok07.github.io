---
import data from "@i18n/locale/es/Hero.json";
---

<style>
    .bg-section {
        position: relative;
        z-index: 5;
        overflow-y: hidden;
        background-image: url("/assets/bg/bg-hero.png");
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
    /* .bg-section::before {
        content: "";
        position: fixed;
        inset: 0;
        z-index: -1;
        background-image: url("/assets/bg/bg-hero.png");
        transform: rotate(30deg);
        background-position: 50%;
        background-size: 80%;
        transform: scale(1.5);
        background-repeat: no-repeat;
    } */
    h1 {
        color: black;
        margin-bottom: 4px;
        text-shadow:
            1px 1px 1px #000000,
            -2px 2px 6px #464aa9,
            2px -2px 6px #6459ff;
    }
    p {
        text-shadow: 1px 1px 1px #000000;
    }
</style>
<section class="relative bg-section">
    <div
        class="grid container2 py-8 lg:gap-8 xl:gap-0 lg:py-16 md:grid-cols-12"
    >
        <div class="mr-auto place-self-center md:col-span-7">
            <h1
                class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl dark:text-white"
            >
                {data.title}
            </h1>
            <h2
                class="max-w-2xl mb-4 text-2xl font-extrabold tracking-tight leading-none md:text-2xl xl:text-3xl dark:text-white"
            >
                {data.subtitle}
            </h2>
            <p
                class="max-w-2xl mb-6 font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400"
            >
                {data.CTA.p}
                <br />
                <!-- {data.CTA.r} -->
            </p>

            <div class="flex gap-4">
                <a
                    href="#"
                    class="flex items-center justify-between btn-md btn-primary border-box-primary"
                >
                    Get started
                    <svg
                        class="w-5 h-5 ml-2 -mr-1"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                        xmlns="http://www.w3.org/2000/svg"
                        ><path
                            fill-rule="evenodd"
                            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                            clip-rule="evenodd"></path></svg
                    >
                </a>
            </div>
        </div>

        <div class="md:mt-0 md:col-span-5">
            <img
                class="rounded-lg mix-blend-multiply"
                src="https://i.pinimg.com/564x/61/d8/94/61d894e78fb05cae50d542b4063323ce.jpg"
                alt="mockup"
            />
        </div>
    </div>
</section>
