---
import services from "@/content/i18n/es/services.json";
import bg from "@/assets/media/bg/bg-skills.png";
import HeaderText from "../ui/HeaderText.astro";
---

<style define:vars={{ image: `url("${bg.src}")` }}>
    article {
        position: relative;
        z-index: 20;
    }
    article::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        max-width: 100vw;
        width: 100%;
        height: 100%;

        z-index: -10;
        opacity: 0.4;
        filter: brightness(50%)  contrast(150%);

        background-image: var(--image);
        background-position: 50% 10%;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
</style>

<article class=" relative text-white">
    <div class="container mx-auto">
        <HeaderText aling="left">
            <h1 slot="title" class="">{services.CTA.p}</h1>
            <h4 slot="description" class="mb-[1.5rem]">{services.CTA.r}</h4>
        </HeaderText>

        <div class="w-full grid grid-cols-1 sm:grid-cols-3 gap-2 md:gap-[5%]">
            {
                services.items.map((v) => (
                    <a href="#contact" class="no-underline">
                        <div class="hover:shadow-[0px_0px_30px_0px] transition-all duration-500 bg-black-dark text-white border border-blue shadow-blue hover:shadow-blue p-4 md:p-8 rounded-md  bg-opacity-20">
                            <h4 class="mb-4">{v.title}</h4>

                            {v.content}
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</article>
