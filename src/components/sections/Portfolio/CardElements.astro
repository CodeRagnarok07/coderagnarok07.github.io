---
// import HeaderText from "@/components/ui/HeaderText.astro";
import imgData from "@/assets/media/portfolio";
import PortFolioDiviceSelector from './DiviceSelector.astro'


const getImgsFromKey = async(id:string)=> imgData.filter((path) => path[0].includes(id))

const {data} = Astro.props

---

        <article class="container flex ">
            <div
                class="border-box-blue h-[70%] my-auto w-full  p-4 md:p-8 rounded-md bg-black-dark bg-opacity-50 flex flex-col items-center
            md:flex-row 
            "
            >
                <div class="my-auto ">
                
                     <PortFolioDiviceSelector paths={ getImgsFromKey(data.id)}
                    />
                </div>
                <div class="md:-ml-[10%]">
                    <h3 class="text-center">{data.Title}</h3>
                    <div class="flex flex-wrap flex-row items-center w-full py-4 justify-center gap-4 ">
                        {data.github && (
                            <a
                                href={data.github}
                                target="_blank"
                                class="btn-md btn-primary border-box-primary text-nowrap"
                            >
                                github
                            </a>
                        )}
                        {data.live && (
                            <a
                                href={data.live}
                                target="_blank"
                                class="btn-md btn-secondary border-box-secondary"
                            >
                                live
                            </a>
                        )}

                        {data.description && (
                            <a
                                href={data.description}
                                target="_blank"
                                class="btn-md btn-secondary border-box-secondary"
                            >
                                descripcion
                            </a>
                        )}
                    </div>
                </div>
            </div>
        </article>
