<section
    id="portfolio"
    class="text-white text-center   "
>

    <article class="container flex flex-col items-center justify-center mx-auto h-auto mb-auto">
        <div
            class="flex items-center flex-col w-full h-max overflow-visible gap-4 -mt-64 uppercase"
        >
            <HeaderText aling="center">
                <h1 slot="title" class="uppercase">Portafolio</h1>
                <h3 slot="description">
                    Descubre mi trabajo y proyectos en mi portafolio digital
                </h3>
