---
import bg from '@/assets/media/PortfolioBg.png'
import HeaderText from "@/components/ui/HeaderText.astro";

import Card from '@/components/ui/Card.astro'

---
<style define:vars={{ image: `url("${bg.src}")` }}>
article{
    position: relative;
    overflow: hidden;
}

    article::before{
        content: "";
        position: absolute;
        top: 0; 
        left: 0;
        max-width: 100vw;
        width: 100%; 
        height: 100%;
        
        z-index: -10;
        opacity: 0.4;
        filter: brightness(50%) contrast(120%);

        background-image: var(--image) ;
        background-position: 50% -20% ;
        background-repeat: no-repeat;
    }
</style>


<article id="home" 

class="text-white text-center relative  h-full  overflow-auto">


<div class="container flex items-center mx-auto h-full">
  
    <div class="flex items-center flex-col w-full h-max overflow-visible gap-4"
    >
    <HeaderText aling="center">
        <h1 slot="title" class="uppercase">Portafolio</h1>
        <h4 slot="description">
            Descubre mi trabajo y proyectos en mi portafolio digital
        </h4>
    </HeaderText>

    <Card theme='primary'>
        hola mundo
    </Card>


    </div>
</div>

</article>