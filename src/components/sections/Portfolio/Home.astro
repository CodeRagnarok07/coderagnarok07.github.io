---
import bg from "@/assets/media/bg/PortfolioBg.png";
import HeaderText from "@/components/ui/HeaderText.astro";
// import dataPortfolio from "@/content/i18n/es/PortFolio_Items.json";
import Card from "@/components/ui/Card.astro";
import ImgMockup from "@/lib/ImgMockup/index.astro";

//  DataPortfolio
import UpisaImg from "@/assets/portfolio/upisa/lg.png";
import TATImg from "@/assets/portfolio/tat/lg.png";
import okconstructoraImg from "@/assets/portfolio/okconstructora/lg.png";

const data = [
    {
        img: UpisaImg,
        name: "UPISA",
    },
    {
        img: TATImg,
        name: "TAT",
    },
    {
        img: okconstructoraImg,
        name: "OkConstructora",
    },
];
---

<style define:vars={{ image: `url("${bg.src}")` }}>
    section {
        position: relative;
    }

    section::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        max-width: 100vw;
        width: 100%;
        height: 100%;

        z-index: -10;
        opacity: 0.4;
        filter: brightness(50%) contrast(120%);

        background-image: var(--image);
        background-position: 50% -20%;
        background-repeat: no-repeat;
    }
</style>
---
<section id="portfolio" class="text-white text-center">
    <div class="container flex-col flex items-center mx-auto h-full">
        <div
            class="flex items-center flex-col w-full h-max overflow-visible gap-4 mb-[5%]"
        >
            <HeaderText aling="center">
                <h1 slot="title" class="uppercase">Portafolio</h1>
                <h3 slot="description">
                    Descubre mi trabajo y proyectos en mi portafolio digital
                </h3>
            </HeaderText>
        </div>

        <div class="flex justify-between gap-6 flex-wrap mb-4">
            {
                data.map((e) => (
                    <a href="/portfolio">
                        <Card theme="primary" className={"pb-5 px-10"}>
                            <div class="w-[300px] mx-auto p-5">
                                <ImgMockup size={"lg"} pathMeta={e.img} />
                            </div>
                            <h4>{e.name}</h4>
                        </Card>
                    </a>
                ))
            }
        </div>

        <div class="mt-10 flex flex-col gap-5 items-center">
            <a
                href="/portfolio"
                class="btn-lg btn-secondary border-box-secondary"
            >
                Ver Todo
            </a>
            <h4 class="text-xl md:text-3xl">
                ¡explora cómo puedo llevar tus ideas al siguiente nivel!
            </h4>
        </div>
    </div>
</section>
