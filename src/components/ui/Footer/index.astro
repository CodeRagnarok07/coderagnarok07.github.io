---
import HeaderText from "../HeaderText.astro";
import Contact from "./Contact.astro";
import { socialLinks } from "@consts";
---

<style>
    footer::before {
        content: "";
        position: absolute;
        inset: 0;
        background-image: url("/assets/texture/footer.svg");
        background-position: center;
        background-size: cover;
        z-index: -1;
        background-blend-mode: overlay;
        filter: contrast(1.5) brightness(1.5) blur(0.5px) opacity(0.8);
        /* transform: rotate(180deg); */
    }
</style>

<footer
    class="relative w-full flex flex-col justify-center bg-gradient-to-b to-primary-dark from-[#4c468318] pb-28 sm:pb-0"
>
    <div
        class="container flex gap-4 flex-col items-center justify-center sm:flex-row sm:justify-between h-full py-4"
    >
        <div>
            <HeaderText aling="center" title="CodeRagnarok" />
        </div>
        <Contact />
        <div class="flex flex-col">
            <HeaderText
                aling="center"
                title="Redes sociales"
                description="sigueme en mis redes"
            />
            <div class="flex justify-center items-center flex-wrap">
                {
                    socialLinks.map((v) => (
                        <a href={v.link}>
                            <img src={`/assets/svg/social/${v.icon}`} alt="" />
                        </a>
                    ))
                }
            </div>
        </div>
    </div>
    <span class="border-x-0 border-t text-center underline py-2">
        Â©2024 coderagnarok. All rights reserved.
    </span>
</footer>
