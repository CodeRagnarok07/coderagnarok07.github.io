---
import tablet from "@assets/divice/tablet.png";
import HeaderText from "@/components/ui/HeaderText.astro";

const images = ["", "", ""];
---

<style>
    section::before {
        content: "";
        position: absolute;
        inset: 0;
        background-position: center;
        /* transform: scale(1.5); */
        background-image: url("/assets/bg/bg-portfolio.png");
        background-repeat: no-repeat;
        z-index: -20;
        filter: contrast(1.5);
    }
    .device {
        @apply w-[250px] h-[300px] flex justify-center items-center  relative  shadow-md bg-black  border-4 rounded-lg overflow-hidden;
        box-shadow: 0px 0px 0px 2px;
        border: 10px solid black;
    }
</style>
<section id="portfolio" class="relative">
    <HeaderText aling="center">
        <h2 slot="title">Portafolio de proyectos</h2>
        <p slot="description">
            Nuestro propósito es ayudar a las personas a alcanzar sus objetivos
            emprendedores y convertirse en líderes en sus campos. Nos esforzamos
            por ser una organización disruptiva y acogedora que fomente el
            crecimiento y el desarrollo personal de nuestros miembros.
        </p>
    </HeaderText>

    <div class="flex">
        {
            images.map((v) => (
                <div class="device border-box-secondary trasition-all duration-500 group hover:bg-opacity-50">
                    <img
                        class="flex scale-y-110 trasition-all duration-1000 h-full absolute inset-0 object-cover -translate-y-2 object-center group-hover:z-[-1]  group-hover:rotate-12  group-hover:scale-150"
                        src="https://tailwindui.com/img/templates/catalyst/banner.png"
                        alt=""
                    />
                    <div class="btn btn-secondary w-[30%] text-center">ver</div>
                </div>
            ))
        }
    </div>
    <div class="flex justify-center">
        <div class="btn-lg btn-secondary border-box-secondary">ver todos</div>
    </div>
</section>

<!-- 
    aspect relation
    destop = 16:9
    tablet = 4:3
    mobile = 1:1 | 3:4 | 9:16
 -->
