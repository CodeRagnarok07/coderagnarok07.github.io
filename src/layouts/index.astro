---
import BaseHead from "@layouts/BaseHead.astro";
import Navbar from "@components/ui/Navbar/index.astro";
import Footer from "@components/ui/Footer/index.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "@consts";
---

<!doctype html>
<html lang="en">
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION}>
        <style is:global>
            body {
                overflow-x: hidden;
            }
            .container {
                max-width: 1280px;
                margin: 0 auto;
                /* @apply max-w-8xl; */
            }

            section {
                width: 100%;
                min-height: 100vh;
                min-height: 100dvh;
                @apply pb-28 pt-4 sm:pb-4 sm:pt-16;
            }
        </style>
    </BaseHead>
    <body class="bg-black-dark text-white flex-col aling-center w-full">
        <Navbar />

        <main class="flex-col aling-center">
            <slot />
        </main>
        <Footer />
    </body>
</html>
