---
import BaseHead from "./BaseHead.astro";
import Navbar from "./ui/Navbar/index.astro";
// import Footer from "./ui/Footer/index.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<style is:global>
    .container {
        margin: 0 auto;
        min-width: 100%;
    }
    main {
        position: absolute;
        inset: 0;
        display: flex;
        flex-wrap: nowrap;
        overflow-y: hidden;
        scroll-behavior: smooth;
        scroll-snap-type: x mandatory;
        /* scroll-snap-type: y mandatory; */
        max-height: min-content;

        &::-webkit-scrollbar {
            /* Hide scrollbar for Chrome, Safari and Opera */
            display: none;
        }

        -ms-overflow-style: none;
        scrollbar-width: none;

        & section {
            position: relative;
            overflow: auto;
            max-height: 100vh;
            max-height: 100dvh;
            width: 100%;

            max-width: 100dvw;

            display: flex;
            flex-shrink: 0;
            scroll-snap-align: start;
            scroll-snap-stop: always;
            flex-direction: column;
            scroll-snap-type: y mandatory;

            &::-webkit-scrollbar {
                /* Hide scrollbar for Chrome, Safari and Opera */
                display: none;
            }

            -ms-overflow-style: none;
            scrollbar-width: none;
            overflow-x: hidden;

            & article {
                min-height: 100dvh;
                max-height: 100dvh;
                width: 100dvw;
                max-width: 100dvw;
                scroll-snap-align: center;
                scroll-snap-stop: always;
                overflow-y: scroll;
                overflow: hidden;
            }
        }
    }

</style>

<html lang="en">
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <body class="bg-[#030713] text-white leading-none">
        <Navbar />

        <main>
            <slot />
        </main>

        <!-- <Footer /> -->
    </body>
</html>
