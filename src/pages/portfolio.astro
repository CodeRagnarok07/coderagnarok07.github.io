---
import Layout from "@/components/layouts/index.astro";

import bg from "@/assets/media/bg/PortfolioBg.png";
import HeaderText from "@/components/ui/HeaderText.astro";
import ListElements from "../components/sections/Portfolio/CardElements.astro";
---

<style define:vars={{ image: `url("${bg.src}")` }}>
    section {
        position: relative;
  
    }

    section::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        max-width: 100vw;
        width: 100%;
        height: 100%;

        z-index: -10;
        opacity: 0.4;
        filter: brightness(50%) contrast(120%);

        background-image: var(--image);
        background-position: 50% -20%;
        background-repeat: no-repeat;
    }
</style>
<Layout> 

<section
    id="portfolio"
    class="text-white text-center   "
>
    <div class="container flex flex-col items-center justify-center mx-auto h-screen">
        <div
            class="flex items-center flex-col w-full h-max overflow-visible gap-4 -mt-64 uppercase"
        >
            <HeaderText aling="center">
                <h1 slot="title" class="uppercase">Portafolio</h1>
                <h3 slot="description">
                    Descubre mi trabajo y proyectos en mi portafolio digital
                </h3>
            </HeaderText>
        </div>
    </div>
</section>
<ListElements/>

</Layout>